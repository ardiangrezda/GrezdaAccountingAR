@page "/admin/business-units"
@using Models
@using Services
@inject BusinessUnitService businessUnitService
@inject NavigationManager NavigationManager
@inject IJSRuntime JSRuntime
@inject ILocalizationService LocalizationService
@attribute [Authorize(Roles = "Admin")]

<div class="container-fluid px-4">
    <div class="text-center mb-4">
        <h1>@businessUnitsLabel</h1>
    </div>
    
    <!-- Search and Create Button Row -->
    <div class="row mb-4">
        <div class="col-md-6">
            <div class="input-group">
                <input type="text" class="form-control" placeholder="@searchPlaceholderLabel"
                       @bind="searchTerm" @onkeypress="HandleKeyPress" />
                <button class="btn btn-primary" @onclick="SearchBusinessUnits">
                    <i class="fas fa-search"></i> @searchButtonLabel
                </button>
            </div>
        </div>
        <div class="col-md-6 text-end">
            <button class="btn btn-success" @onclick="CreateNew">
                <i class="fas fa-plus"></i> @newBusinessUnitLabel
            </button>
        </div>
    </div>

    @if (businessUnits == null)
    {
        <div class="spinner-border" role="status">
            <span class="visually-hidden">@loadingLabel</span>
        </div>
    }
    else
    {
        <div class="card">
            <div class="card-body">
                @if (businessUnits.Any())
                {
                    <div class="table-responsive">
                        <table class="table table-striped compact-table">
                            <thead>
                                <tr>
                                    <th>@codeLabel</th>
                                    <th>@nameLabel</th>
                                    <th>@descriptionLabel</th>
                                    <th>@addressLabel</th>
                                    <th>@statusLabel</th>
                                    <th>@actionsLabel</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var unit in businessUnits)
                                {
                                    <tr>
                                        <td>@unit.Code</td>
                                        <td>@unit.Name</td>
                                        <td>@unit.Description</td>
                                        <td>@unit.Address</td>
                                        <td>
                                            @if (unit.IsActive)
                                            {
                                                <span class="badge bg-success">@activeLabel</span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-danger">@inactiveLabel</span>
                                            }
                                        </td>
                                        <td>
                                            <button class="btn btn-sm btn-primary me-1 compact-btn" @onclick="() => Edit(unit.Id)">
                                                <i class="fas fa-edit"></i>
                                            </button>
                                            <button class="btn btn-sm btn-danger compact-btn" @onclick="() => Delete(unit.Id)">
                                                <i class="fas fa-trash"></i>
                                            </button>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
                else
                {
                    <div class="alert alert-info">
                        @noResultsFoundLabel
                    </div>
                }
            </div>
        </div>
    }
</div>

<style>
    /* Compact table styles */
    .compact-table td,
    .compact-table th {
        padding: 0.4rem 0.5rem !important;
        vertical-align: middle !important;
        line-height: 1.2 !important;
    }

    /* Compact buttons */
    .compact-btn {
        padding: 0.2rem 0.4rem !important;
        font-size: 0.875rem !important;
        line-height: 1 !important;
    }

    .compact-btn i {
        font-size: 0.875rem !important;
    }

    /* Compact badges */
    .compact-table .badge {
        padding: 0.25rem 0.5rem !important;
        font-size: 0.75rem !important;
    }
</style>

@code {
    private List<BusinessUnit>? businessUnits;
    private string searchTerm = string.Empty;

    // Localization strings
    private string newBusinessUnitLabel = string.Empty;
    private string businessUnitsLabel = string.Empty;
    private string codeLabel = string.Empty;
    private string nameLabel = string.Empty;
    private string descriptionLabel = string.Empty;
    private string addressLabel = string.Empty;
    private string statusLabel = string.Empty;
    private string actionsLabel = string.Empty;
    private string activeLabel = string.Empty;
    private string inactiveLabel = string.Empty;
    private string areYouSureDeleteBULabel = string.Empty;
    private string loadingLabel = string.Empty;
    private string searchButtonLabel = string.Empty;
    private string searchPlaceholderLabel = string.Empty;
    private string noResultsFoundLabel = string.Empty;

    protected override async Task OnInitializedAsync()
    {
        await LoadLocalizationStrings();
        await LoadBusinessUnits();
    }

    private async Task LoadLocalizationStrings()
    {
        var languageId = await LocalizationService.GetDefaultLanguageId();

        newBusinessUnitLabel = LocalizationService.GetString("STRING_00196", languageId) ?? "New Business Unit";
        businessUnitsLabel = LocalizationService.GetString("STRING_00179", languageId) ?? "Business Units";
        codeLabel = LocalizationService.GetString("STRING_00033", languageId) ?? "Code";
        nameLabel = LocalizationService.GetString("STRING_00011", languageId) ?? "Name";
        descriptionLabel = LocalizationService.GetString("STRING_00028", languageId) ?? "Description";
        addressLabel = LocalizationService.GetString("STRING_00047", languageId) ?? "Address";
        statusLabel = LocalizationService.GetString("STRING_00038", languageId) ?? "Status";
        actionsLabel = LocalizationService.GetString("STRING_00039", languageId) ?? "Actions";
        activeLabel = LocalizationService.GetString("STRING_00019", languageId) ?? "Active";
        inactiveLabel = LocalizationService.GetString("STRING_00020", languageId) ?? "Inactive";
        areYouSureDeleteBULabel = LocalizationService.GetString("STRING_00197", languageId) ?? "Are you sure you want to delete this business unit?";
        loadingLabel = LocalizationService.GetString("STRING_00266", languageId) ?? "Loading...";
        searchButtonLabel = LocalizationService.GetString("STRING_00275", languageId) ?? "Search";
        searchPlaceholderLabel = LocalizationService.GetString("STRING_00273", languageId) ?? "Search business units...";
        noResultsFoundLabel = LocalizationService.GetString("STRING_00274", languageId) ?? "No business units found.";
    }

    private async Task LoadBusinessUnits()
    {
        businessUnits = await businessUnitService.GetAllAsync();
    }

    private async Task SearchBusinessUnits()
    {
        businessUnits = await businessUnitService.SearchAsync(searchTerm);
    }

    private async Task HandleKeyPress(KeyboardEventArgs e)
    {
        if (e.Key == "Enter")
        {
            await SearchBusinessUnits();
        }
    }

    private void CreateNew()
    {
        NavigationManager.NavigateTo("/admin/business-units/create");
    }

    private void Edit(int id)
    {
        NavigationManager.NavigateTo($"/admin/business-units/edit/{id}");
    }

    private async Task Delete(int id)
    {
        if (await JSRuntime.InvokeAsync<bool>("confirm", areYouSureDeleteBULabel))
        {
            await businessUnitService.DeleteAsync(id);
            await LoadBusinessUnits();
        }
    }
}
