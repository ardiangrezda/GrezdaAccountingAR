    }

    private string ValidateAndFormatNumericInput(string input)
    {
        var cleanInput = "";
        var decimalFound = false;
        var decimalPlaces = 0;

        foreach (char c in input)
        {
            if (char.IsDigit(c))
            {
                if (decimalFound && decimalPlaces >= 2)
                    break; // Limit to 2 decimal places
                
                cleanInput += c;
                if (decimalFound) decimalPlaces++;
            }
            else if (c == '.' && !decimalFound && cleanInput.Length > 0)
            {
                cleanInput += c;
                decimalFound = true;
            }
        }

        return cleanInput;
    }

    // Format quantity to show clean numbers (no unnecessary decimals)
    private string FormatQuantity(decimal quantity)
    {
        // If it's a whole number, show without decimals
        if (quantity == Math.Floor(quantity))
        {
            return quantity.ToString("0");
        }
        // Otherwise show up to 2 decimal places, removing trailing zeros
        return quantity.ToString("0.##");
    }

