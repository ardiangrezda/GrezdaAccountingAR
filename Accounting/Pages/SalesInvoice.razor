    private async Task LoadOriginalInvoiceItems()
    {
        if (selectedOriginalInvoice?.Items == null) return;

        try
        {
            sale.Items.Clear();

            foreach (var originalItem in selectedOriginalInvoice.Items)
            {
                var returnableQty = await SalesService.GetReturnableQuantityAsync(originalItem.Id);
                
                if (returnableQty > 0)
                {
                    var returnItem = new SalesInvoiceItem
                    {
                        SalesInvoiceId = sale.Id,
                        ArticleId = originalItem.ArticleId,
                        Barcode = originalItem.Barcode,
                        ArticleCode = originalItem.ArticleCode,
                        Description = originalItem.Description,
                        Quantity = 0, // User will specify return quantity
                        OriginalQuantity = originalItem.Quantity,
                        OriginalInvoiceItemId = originalItem.Id,
                        UnitId = originalItem.UnitId,
                        UnitCode = originalItem.UnitCode,
                        PriceWithoutVAT = originalItem.PriceWithoutVAT,
                        PriceWithVAT = originalItem.PriceWithVAT,
                        VATPercent = originalItem.VATPercent,
                        DiscountPercent = originalItem.DiscountPercent,
                        CurrencyId = originalItem.CurrencyId,
                        CurrencyCode = originalItem.CurrencyCode,
                        ExchangeRate = originalItem.ExchangeRate,
                        ReturnableQuantity = returnableQty
