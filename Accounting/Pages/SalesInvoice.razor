    private async Task LoadInvoiceByNumber()
    {
        if (string.IsNullOrWhiteSpace(originalInvoiceSearchTerm))
            return;

        try
        {
            showInvoiceNotFoundError = false;
            
            var currentBusinessUnitId = await JSRuntime.InvokeAsync<string>("localStorage.getItem", "currentBusinessUnit");
            if (int.TryParse(currentBusinessUnitId, out var businessUnitId))
            {
                // Use the exact invoice number search
                var invoice = await SalesService.GetOriginalInvoiceByNumberAsync(originalInvoiceSearchTerm.Trim(), businessUnitId);
                
                if (invoice != null)
                {
                    SelectOriginalInvoice(invoice);
                    // Automatically load items after selecting invoice
                    await LoadOriginalInvoiceItems();
                }
                else
                {
                    // Better error diagnostics
                    await JSRuntime.InvokeVoidAsync("console.error", $"Invoice '{originalInvoiceSearchTerm}' not found. Requirements: Must be posted, not cancelled, and not a return.");
                    
                    // Invoice not found or cannot be returned
                    showInvoiceNotFoundError = true;
                    selectedOriginalInvoice = null;
                    sale.OriginalInvoiceId = null;
                    sale.OriginalInvoiceNumber = null;
                    sale.Items.Clear();
                }
                
                StateHasChanged();
            }
        }
        catch (Exception ex)
        {
            await JSRuntime.InvokeVoidAsync("console.error", "Error loading invoice by number", ex.Message);
            await JSRuntime.InvokeVoidAsync("alert", $"Error loading invoice: {ex.Message}");
            showInvoiceNotFoundError = true;
            StateHasChanged();
        }
