            return false;
        }

        if (sale.BusinessUnitId <= 0)
        {
            await JSRuntime.InvokeVoidAsync("alert", businessUnitRequiredLabel);
            return false;
        }

        if (isReturnCategory && sale.IsReturn)
        {
            if (sale.OriginalInvoiceId == null || sale.OriginalInvoiceId <= 0)
            {
                await JSRuntime.InvokeVoidAsync("alert", "Please select an original invoice for the return.");
                return false;
            }

            if (string.IsNullOrWhiteSpace(sale.ReturnReason))
            {
                await JSRuntime.InvokeVoidAsync("alert", "Please provide a reason for the return.");
                return false;
            }
        }

        if (sale.Items == null || !sale.Items.Any())
        {
            await JSRuntime.InvokeVoidAsync("alert", pleaseAddOneItemLabel);
            return false;
        }

        // For regular invoices, all items must have quantity > 0
        if (isReturnCategory)
        {
            // For returns: At least ONE item must have quantity > 0
            var itemsWithQuantity = sale.Items.Where(i => i.Quantity > 0).ToList();
            if (!itemsWithQuantity.Any())
            {
                await JSRuntime.InvokeVoidAsync("alert", "Please specify a quantity greater than zero for at least one item to return.");
                return false;
            }

            // Validate only items being returned (quantity > 0)
            foreach (var item in itemsWithQuantity)
            {
                if (item.ArticleId <= 0)
                {
                    await JSRuntime.InvokeVoidAsync("alert", allItemsValidArticleLabel);
                    return false;
                }

                // Validate return quantities
                if (item.OriginalInvoiceItemId.HasValue)
                {
                    var returnableQty = GetReturnableQuantityForItem(item);
                    if (item.Quantity > returnableQty)
                    {
                        await JSRuntime.InvokeVoidAsync("alert", $"Cannot return {item.Quantity} of '{item.Description}'. Only {returnableQty} available for return.");
                        return false;
                    }
                }
            }
        }
        else
        {
            // For regular invoices: ALL items must have quantity > 0 and valid article
            foreach (var item in sale.Items)
            {
                if (item.ArticleId <= 0)
                {
                    await JSRuntime.InvokeVoidAsync("alert", allItemsValidArticleLabel);
                    return false;
                }

                if (item.Quantity <= 0)
                {
                    await JSRuntime.InvokeVoidAsync("alert", allItemsQuantityGreaterZeroLabel);
                    return false;
                }
            }
        }

        return true;
    }

