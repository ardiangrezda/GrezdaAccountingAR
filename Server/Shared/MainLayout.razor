@inherits LayoutComponentBase
@attribute [Authorize]

<PageTitle>Server</PageTitle>

<div class="page">
    <div class="sidebar">
        <NavMenu />
    </div>

    <main>
        <div class="content">
            @Body
        </div>
    </main>
</div>

<style>
    /* These styles make sure the layout works correctly with the NavMenu */
    .page {
        display: flex;
        flex-direction: row;
        height: 100vh;
    }
    
    main {
        flex: 1;
        overflow-y: auto;
    }
    
    .content {
        width: 100%;
    }
    
    @@media (max-width: 640.98px) {
        .sidebar {
            position: fixed;
            z-index: 999;
            width: 100%;
            height: auto;
        }
        
        main {
            margin-left: 0 !important;
            margin-top: 60px;
        }
    }
</style>