@page "/sales/{Id:int}"
@using Microsoft.AspNetCore.Authorization
@using Microsoft.AspNetCore.Components
@using Server.Models
@using Server.Services
@using System.Security.Claims
@inject SalesService SalesService
@inject ILocalizationService LocalizationService
@inject NavigationManager Navigation
@inject IJSRuntime JSRuntime
@inject AuthenticationStateProvider AuthenticationStateProvider
@inject StateContainer StateContainer
@inject ILogger<NavMenu> Logger
@attribute [Authorize]

<PageTitle>Invoice Details</PageTitle>

@if (invoice != null)
{
    <div class="container-fluid px-4">
        <div class="row">
            <div class="col-12">
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item">
                            <a href="/sales">Sales</a>
                        </li>
                        <li class="breadcrumb-item active">@invoiceNumberLabel </li>
                    </ol>
                </nav>

                <div class="card shadow-sm">
                    <div class="card-header d-flex justify-content-between align-items-center">
                        <h3 class="mb-0">@invoiceNumberLabel: @invoice.InvoiceNumber</h3>
                        <div>
                            @if (invoice.IsCancelled)
                            {
                                <span class="badge bg-danger me-2">@cancelledLabel</span>
                            }
                            else if (invoice.IsPosted)
                            {
                                <span class="badge bg-success me-2">@postedLabel</span>
                            }
                            else
                            {
                                <span class="badge bg-warning me-2">@draftLabel</span>
                            }
                            
                            @if (!invoice.IsPosted && !invoice.IsCancelled)
                            {
                                <button class="btn btn-primary btn-sm" @onclick="EditInvoice">
                                    <i class="fas fa-edit"></i> @editLabel
                                </button>
                            }
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="row mb-4">
                            <div class="col-md-6">
                                <h5 class="border-bottom pb-2">@invoiceSummaryLabel</h5>
                                <table class="table table-borderless">
                                    <tr>
                                        <td class="text-muted" style="width:40%">@invoiceNumberLabel:</td>
                                        <td class="fw-bold">@invoice.InvoiceNumber</td>
                                    </tr>
                                    <tr>
                                        <td class="text-muted">@invoiceDateLabel:</td>
                                        <td>@invoice.InvoiceDate.ToShortDateString()</td>
                                    </tr>
                                    @if (invoice.InvoiceExpiryDate.HasValue)
                                    {
                                        <tr>
                                            <td class="text-muted">@expiryDateLabel:</td>
                                            <td>@invoice.InvoiceExpiryDate.Value.ToShortDateString()</td>
                                        </tr>
                                    }
                                    <tr>
                                        <td class="text-muted">@createdAtLabel:</td>
                                        <td>@invoice.CreatedAt.ToString("yyyy-MM-dd HH:mm")</td>
                                    </tr>
                                    @if (invoice.LastModifiedAt.HasValue)
                                    {
                                        <tr>
                                            <td class="text-muted">@lastModifiedLabel:</td>
                                            <td>@invoice.LastModifiedAt.Value.ToString("yyyy-MM-dd HH:mm")</td>
                                        </tr>
                                    }
                                    @if (invoice.IsCancelled && !string.IsNullOrEmpty(invoice.CancellationReason))
                                    {
                                        <tr>
                                            <td class="text-muted">@cancellationReasonLabel:</td>
                                            <td class="text-danger">@invoice.CancellationReason</td>
                                        </tr>
                                    }
                                </table>
                            </div>
                            <div class="col-md-6">
                                <!-- Card Body: Buyer Information -->
                                <h5 class="border-bottom pb-2">@buyerLabel</h5>
                                <table class="table table-borderless">
                                    <tr>
                                        <td class="text-muted" style="width:30%">@buyerNameLabel:</td>
                                        <td class="fw-bold">@invoice.BuyerName</td>
                                    </tr>
                                    <tr>
                                        <td class="text-muted">@codeHeader: </td>
                                        <td>@invoice.BuyerCode</td>
                                    </tr>
                                    @if (invoice.Buyer != null)
                                    {
                                        @if (!string.IsNullOrEmpty(invoice.Buyer.Address))
                                        {
                                            <tr>
                                                <td class="text-muted">@addressLabel: </td>
                                                <td>@invoice.Buyer.Address</td>
                                            </tr>
                                        }
                                    }
                                </table>
                            </div>
                        </div>

                        <h5 class="border-bottom pb-2">@invoiceItemsLabel</h5>
                        <div class="table-responsive mb-4">
                            <table class="table table-bordered table-striped">
                                <thead class="table-light">
                                    <tr>
                                        <th>#</th>
                                        <th>@codeHeader</th>
                                        <th>@descriptionLabel</th>
                                        <th class="text-end">@quantityLabel</th>
                                        <th class="text-center">@unitLabel</th>
                                        <th class="text-end">@priceExclLabel</th>
                                        <th class="text-end">@discPercentLabel</th>
                                        <th class="text-end">VAT %</th>
                                        <th class="text-end">@valueExclLabel</th>
                                        <th class="text-end">@valueInclLabel</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @if (invoice.Items != null && invoice.Items.Any())
                                    {
                                        @foreach (var (item, index) in invoice.Items.Select((item, i) => (item, i + 1)))
                                        {
                                            <tr>
                                                <td class="text-center">@index</td>
                                                <td>@item.ArticleCode</td>
                                                <td>@item.Description</td>
                                                <td class="text-end">@item.Quantity.ToString("F2")</td>
                                                <td class="text-center">@item.UnitCode</td>
                                                <td class="text-end">@item.PriceWithoutVAT.ToString("F2") @item.CurrencyCode</td>
                                                <td class="text-end">@item.DiscountPercent.ToString("F2")%</td>
                                                <td class="text-end">@item.VATPercent.ToString("F2")%</td>
                                                <td class="text-end">@item.ValueWithoutVAT.ToString("F2") @item.CurrencyCode</td>
                                                <td class="text-end">@item.ValueWithVAT.ToString("F2") @item.CurrencyCode</td>
                                            </tr>
                                        }
                                    }
                                    else
                                    {
                                        <tr>
                                            <td colspan="10" class="text-center">No items found</td>
                                        </tr>
                                    }
                                </tbody>
                                <tfoot>
                                    <tr class="bg-light fw-bold">
                                        <td colspan="8" class="text-end">@totalsLabel</td>
                                        <td class="text-end">@invoice.TotalWithoutVAT.ToString("F2")</td>
                                        <td class="text-end">@invoice.TotalWithVAT.ToString("F2")</td>
                                    </tr>
                                </tfoot>
                            </table>
                        </div>

                        <div class="row">
                            <div class="col-md-6 offset-md-6">
                                <div class="card">
                                    <div class="card-header bg-dark text-white">
                                        <h5 class="mb-0">@invoiceSummaryLabel</h5>
                                    </div>
                                    <div class="card-body">
                                        <div class="d-flex justify-content-between mb-2">
                                            <span>@subtotalBeforeDiscountLabel:</span>
                                            <span class="fw-bold">@((invoice.TotalWithoutVAT + invoice.TotalDiscountAmount).ToString("F2"))</span>
                                        </div>
                                        <div class="d-flex justify-content-between mb-2">
                                            <span>@totalDiscountsLabel:</span>
                                            <span class="fw-bold text-danger">-@invoice.TotalDiscountAmount.ToString("F2")</span>
                                        </div>
                                        <div class="d-flex justify-content-between mb-3">
                                            <span>@totalVatLabel:</span>
                                            <span class="fw-bold">@invoice.TotalVATAmount.ToString("F2")</span>
                                        </div>
                                        <div class="bg-success text-white p-3 rounded">
                                            <div class="d-flex justify-content-between">
                                                <span class="h5 mb-0">@totalDueLabel:</span>
                                                <span class="h5 mb-0">@invoice.TotalWithVAT.ToString("F2")</span>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="card-footer">
                        <div class="d-flex justify-content-between">
                            <button class="btn btn-secondary" @onclick="GoBack">
                                <i class="fas fa-arrow-left"></i> @backToSalesLabel
                            </button>
                            <div>
                                @if (!invoice.IsPosted && !invoice.IsCancelled)
                                {
                                    <button class="btn btn-success me-2" @onclick="PostInvoice">
                                        <i class="fas fa-check-circle"></i> @postInvoiceLabel

                                    </button>
                                    <button class="btn btn-danger me-2" @onclick="CancelInvoice">
                                        <i class="fas fa-times-circle"></i> @cancelLabel
                                    </button>
                                    <button class="btn btn-primary me-2" @onclick="EditInvoice">
                                        <i class="fas fa-edit"></i> @editLabel
                                    </button>
                                }
                                <button class="btn btn-info" @onclick="PrintInvoice">
                                    <i class="fas fa-print"></i> @printLabel
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
else if (loading)
{
    <div class="text-center p-5">
        <div class="spinner-border" role="status">
            <span class="visually-hidden">Loading...</span>
        </div>
    </div>
}
else
{
    <div class="alert alert-warning m-5">
        <h4>@invoiceNotFoundLabel</h4>
        <p>@invoiceDoesNotExistLabel</p>
        <a href="/sales" class="btn btn-primary">@backToSalesLabel</a>
    </div>
}

@code {
    [Parameter] public int Id { get; set; }

    private Server.Models.SalesInvoice? invoice;
    private bool loading = true;
    private string? userId;

    // Localization variables
    private string invoiceNumberLabel = string.Empty;
    private string buyerLabel = string.Empty;
    private string invoiceDateLabel = string.Empty;
    private string codeHeader = string.Empty;
    private string addressLabel = string.Empty;
    private string invoiceItemsLabel = string.Empty;
    private string descriptionLabel = string.Empty;
    private string quantityLabel = string.Empty;
    private string unitLabel = string.Empty;
    private string priceExclLabel = string.Empty;
    private string discPercentLabel = string.Empty;
    private string valueExclLabel = string.Empty;
    private string valueInclLabel = string.Empty;
    private string totalsLabel = string.Empty;
    private string invoiceSummaryLabel = string.Empty;
    private string subtotalBeforeDiscountLabel = string.Empty;
    private string totalDiscountsLabel = string.Empty;
    private string totalVatLabel = string.Empty;
    private string totalDueLabel = string.Empty;
    private string editLabel = string.Empty;
    private string expiryDateLabel = string.Empty;
    private string createdAtLabel = string.Empty;
    private string buyerNameLabel = string.Empty;
    private string lastModifiedLabel = string.Empty;
    private string cancellationReasonLabel = string.Empty;
    private string allSalesLabel = string.Empty;
    private string backToSalesLabel = string.Empty;
    private string postInvoiceLabel = string.Empty;
    private string cancelLabel = string.Empty;
    private string printLabel = string.Empty;
    private string areYouSureToCancelLabel = string.Empty;
    private string provideReasonForCancelLabel = string.Empty;
    private string invoiceCancelSuccessLabel = string.Empty;
    private string errorCancelInvoiceLabel = string.Empty;
    private string errorPrintingInvoiceLabel = string.Empty;
    private string errorPostingInvoiceLabel = string.Empty;
    private string invoicePostingSuccessLabel = string.Empty;
    private string areYouSurePostInvoiceLabel = string.Empty;
    private string errorLoadingInvoiceLabel = string.Empty;
    private string errorSettingCategoryLabel = string.Empty;
    private string invoiceNotFoundLabel = string.Empty;
    private string invoiceDoesNotExistLabel = string.Empty;
    private string draftLabel = string.Empty;
    private string cancelledLabel = string.Empty;
    private string postedLabel = string.Empty;

    protected override async Task OnInitializedAsync()
    {
        await LoadLocalizationStrings();

        try
        {
            loading = true;
            
            var authState = await AuthenticationStateProvider.GetAuthenticationStateAsync();
            userId = authState.User.FindFirst(ClaimTypes.NameIdentifier)?.Value;
            
            invoice = await SalesService.GetSaleByIdAsync(Id);

            if (invoice != null && invoice.SalesCategoryId > 0)
            {
                try
                {
                    var categories = await StateContainer.GetSalesCategoriesAsync();
                    var category = categories.FirstOrDefault(c => c.Id == invoice.SalesCategoryId);
                    if (category?.Code != null)
                    {
                        await JSRuntime.InvokeVoidAsync("sessionStorage.setItem", "currentSalesCategory", category.Code);
                        await JSRuntime.InvokeVoidAsync("dispatchEvent", new object[] { new { type = "storage" } });
                    }
                }
                catch (Exception ex)
                {
                    Console.WriteLine(errorSettingCategoryLabel + $": {ex.Message}");
                }
            }
        }
        catch (Exception ex)
        {
            await JSRuntime.InvokeVoidAsync("console.error", errorLoadingInvoiceLabel, ex.Message);
        }
        finally
        {
            loading = false;
        }
    }

    private async Task LoadLocalizationStrings()
    {
        var languageId = await LocalizationService.GetDefaultLanguageId();
        invoiceNumberLabel = LocalizationService.GetString("STRING_00139", languageId) ?? "Invoice #";
        buyerLabel = LocalizationService.GetString("STRING_00147", languageId) ?? "Buyer Information";
        invoiceDateLabel = LocalizationService.GetString("STRING_00119", languageId) ?? "Invoice Date";
        codeHeader = LocalizationService.GetString("STRING_00033", languageId) ?? "Code";
        addressLabel = LocalizationService.GetString("STRING_00083", languageId) ?? "Address";
        invoiceItemsLabel = LocalizationService.GetString("STRING_00116", languageId) ?? "Invoice Items";
        descriptionLabel = LocalizationService.GetString("STRING_00028", languageId) ?? "Description";
        quantityLabel = LocalizationService.GetString("STRING_00124", languageId) ?? "QTY";
        unitLabel = LocalizationService.GetString("STRING_00013", languageId) ?? "Unit";
        priceExclLabel = LocalizationService.GetString("STRING_00125", languageId) ?? "Price Excl.";
        discPercentLabel = LocalizationService.GetString("STRING_00127", languageId) ?? "Disc. %";
        valueExclLabel = LocalizationService.GetString("STRING_00129", languageId) ?? "Value Excl.";
        valueInclLabel = LocalizationService.GetString("STRING_00130", languageId) ?? "Value Incl.";
        totalsLabel = LocalizationService.GetString("STRING_00131", languageId) ?? "Totals";
        invoiceSummaryLabel = LocalizationService.GetString("STRING_00132", languageId) ?? "INVOICE SUMMARY";
        subtotalBeforeDiscountLabel = LocalizationService.GetString("STRING_00133", languageId) ?? "Subtotal (before discount)";
        totalDiscountsLabel = LocalizationService.GetString("STRING_00134", languageId) ?? "Total Discounts";
        totalVatLabel = LocalizationService.GetString("STRING_00135", languageId) ?? "Total VAT";
        totalDueLabel = LocalizationService.GetString("STRING_00136", languageId) ?? "TOTAL DUE";
        editLabel = LocalizationService.GetString("STRING_00021", languageId) ?? "Edit";
        expiryDateLabel = LocalizationService.GetString("STRING_00120", languageId) ?? "Expiry Date";
        createdAtLabel = LocalizationService.GetString("STRING_00149", languageId) ?? "Created At";
        buyerNameLabel = LocalizationService.GetString("STRING_00121", languageId) ?? "Buyer Name";
        lastModifiedLabel = LocalizationService.GetString("STRING_00150", languageId) ?? "Last Modified";
        cancellationReasonLabel = LocalizationService.GetString("STRING_00160", languageId) ?? "Cancellation Reason";
        allSalesLabel = LocalizationService.GetString("STRING_00152", languageId) ?? "All Sales";
        backToSalesLabel = LocalizationService.GetString("STRING_00151", languageId) ?? "Back to Sales";
        postInvoiceLabel = LocalizationService.GetString("STRING_00152", languageId) ?? "Post Invoice";
        cancelLabel = LocalizationService.GetString("STRING_00153", languageId) ?? "Cancel";
        printLabel = LocalizationService.GetString("STRING_00154", languageId) ?? "Print";
        areYouSureToCancelLabel = LocalizationService.GetString("STRING_00161", languageId) ?? "Are you sure you want to cancel this invoice?";
        provideReasonForCancelLabel = LocalizationService.GetString("STRING_00162", languageId) ?? "Please provide a reason for cancellation";
        invoiceCancelSuccessLabel = LocalizationService.GetString("STRING_00163", languageId) ?? "Invoice cancelled successfully.";
        errorCancelInvoiceLabel = LocalizationService.GetString("STRING_00164", languageId) ?? "Error cancelling invoice";
        errorPrintingInvoiceLabel = LocalizationService.GetString("STRING_00165", languageId) ?? "Error printing invoice";
        errorPostingInvoiceLabel = LocalizationService.GetString("STRING_00166", languageId) ?? "Error posting invoice";
        invoicePostingSuccessLabel = LocalizationService.GetString("STRING_00167", languageId) ?? "Invoice posted successfully.";
        areYouSurePostInvoiceLabel = LocalizationService.GetString("STRING_00168", languageId) ?? "Are you sure you want to post this invoice? This action cannot be undone.";
        errorLoadingInvoiceLabel = LocalizationService.GetString("STRING_00169", languageId) ?? "Error loading invoice";
        errorSettingCategoryLabel = LocalizationService.GetString("STRING_00170", languageId) ?? "Error setting category";
        invoiceNotFoundLabel = LocalizationService.GetString("STRING_00171", languageId) ?? "Invoice Not Found";
        invoiceDoesNotExistLabel = LocalizationService.GetString("STRING_00172", languageId) ?? "The invoice you are looking for does not exist or has been removed.";
        draftLabel = LocalizationService.GetString("STRING_00158", languageId) ?? "Draft";
        cancelledLabel = LocalizationService.GetString("STRING_00156", languageId) ?? "Cancelled";
        postedLabel = LocalizationService.GetString("STRING_00157", languageId) ?? "Posted";
    }

    private async Task GoBack()
    {
        try
        {
            var categories = await StateContainer.GetSalesCategoriesAsync();
            var category = categories.FirstOrDefault(c => c.Id == invoice.SalesCategoryId);
            
            if (category?.Code != null)
            {
                await JSRuntime.InvokeVoidAsync("sessionStorage.setItem", "currentSalesCategory", category.Code);
                
                var categoryRoute = GetCategoryRoute(category.Code);
                Navigation.NavigateTo($"/{categoryRoute}");
            }
            else
            {
                await JSRuntime.InvokeVoidAsync("sessionStorage.removeItem", "currentSalesCategory");
                Navigation.NavigateTo("/sales");
            }
        }
        catch (Exception ex)
        {
            await JSRuntime.InvokeVoidAsync("sessionStorage.removeItem", "currentSalesCategory");
            Navigation.NavigateTo("/sales");
        }
    }

    private string GetCategoryRoute(string code)
    {
        return code.ToLower() switch
        {
            "dom" => "sales/domestic",
            "cash" => "sales/cash",
            "exp" => "sales/export",
            "del" => "sales/delivery",
            "serv" => "sales/service",
            "cn" => "sales/credit-note",
            "ret" => "sales/returns",
            "other" => "sales/other",
            "sum" => "sales/summary",
            "print" => "sales/printing",
            "bar" => "sales/barcode",
            _ => "sales"
        };
    }

    private void EditInvoice()
    {
        if (invoice != null && !invoice.IsPosted && !invoice.IsCancelled)
        {
            Navigation.NavigateTo($"/sales/edit/{Id}");
        }
    }

    private async Task PostInvoice()
    {
        if (invoice == null || invoice.IsPosted || invoice.IsCancelled || string.IsNullOrEmpty(userId))
            return;

        try
        {
            bool confirmed = await JSRuntime.InvokeAsync<bool>("confirm", areYouSurePostInvoiceLabel);
            
            if (confirmed)
            {
                await SalesService.PostSaleAsync(Id, userId);
                
                invoice = await SalesService.GetSaleByIdAsync(Id);
                
                await JSRuntime.InvokeVoidAsync("alert", invoicePostingSuccessLabel);
            }
        }
        catch (Exception ex)
        {
            await JSRuntime.InvokeVoidAsync("alert", errorPostingInvoiceLabel + $": {ex.Message}");
        }
    }

    private async Task CancelInvoice()
    {
        if (invoice == null || invoice.IsPosted || invoice.IsCancelled || string.IsNullOrEmpty(userId))
            return;

        try
        {
            bool confirmed = await JSRuntime.InvokeAsync<bool>("confirm", areYouSureToCancelLabel);
            
            if (confirmed)
            {
                string reason = await JSRuntime.InvokeAsync<string>("prompt", @provideReasonForCancelLabel+ ":", "");
                
                if (!string.IsNullOrWhiteSpace(reason))
                {
                    await SalesService.CancelSaleAsync(Id, reason, userId);
                    
                    invoice = await SalesService.GetSaleByIdAsync(Id);
                    
                    await JSRuntime.InvokeVoidAsync("alert", invoiceCancelSuccessLabel);
                }
            }
        }
        catch (Exception ex)
        {
            await JSRuntime.InvokeVoidAsync("alert", errorCancelInvoiceLabel + $": {ex.Message}");
        }
    }

    private async Task PrintInvoice()
    {
        try
        {
            await JSRuntime.InvokeVoidAsync("window.print");
        }
        catch (Exception ex)
        {
            await JSRuntime.InvokeVoidAsync("alert", errorPrintingInvoiceLabel + $": {ex.Message}");
        }
    }
}