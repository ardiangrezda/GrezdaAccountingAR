@page "/login"
@using Microsoft.AspNetCore.Identity
@using Server.Models
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager
@{
    string errorMessage = "";

    if (Request.Method == "POST")
    {
        var email = Request.Form["email"];
        var password = Request.Form["password"];

        try
        {
            var user = await UserManager.FindByEmailAsync(email);
            if (user != null)
            {
                var result = await SignInManager.PasswordSignInAsync(user.UserName, password, isPersistent: true, lockoutOnFailure: false);
                if (result.Succeeded)
                {
                    // Change this to use absolute path
                    Response.Redirect("/", true);
                    return;
                }
            }
            errorMessage = "Invalid login attempt.";
        }
        catch (Exception ex)
        {
            errorMessage = "Login error: " + ex.Message;
        }
    }
}

<!DOCTYPE html>
<html>
<head>
    <title>Login</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-4">
                <div class="card">
                    <div class="card-header text-center">
                        <h3>Accounting System</h3>
                    </div>
                    <div class="card-body">
                        <form method="post">
                            @if (!string.IsNullOrEmpty(errorMessage))
                            {
                                <div class="alert alert-danger">@errorMessage</div>
                            }
                            <div class="mb-3">
                                <label>Email</label>
                                <input name="email" class="form-control" value="admin@accounting.com" required />
                            </div>
                            <div class="mb-3">
                                <label>Password</label>
                                <input name="password" type="password" class="form-control" value="Admin123!" required />
                            </div>
                            <button type="submit" class="btn btn-primary w-100">Login</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>