    private async Task OnPriceWithoutVatInput(ChangeEventArgs e, SalesInvoiceItem item)
    {
        if (item == null) return;

        // Parse user input and update PriceWithoutVAT
        if (decimal.TryParse(e?.Value?.ToString(), out var priceExcl))
        {
            item.PriceWithoutVAT = Math.Round(priceExcl, 2);

            // Recompute PriceWithVAT from user-entered PriceWithoutVAT and VATPercent
            item.PriceWithVAT = Math.Round(item.PriceWithoutVAT * (1 + (item.VATPercent / 100)), 2);

            // Recalculate totals (CalculateItemTotal expects PriceWithVAT to be set)
            await CalculateItemTotal(item);
        }
    }
